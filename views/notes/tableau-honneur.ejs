<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>
        <%=appName%>| <%=pageTitle%>
    </title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../vendors/iconfonts/font-awesome/css/all.min.css">
    <link rel="stylesheet" href="../../vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../../vendors/css/vendor.bundle.addons.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="../../css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="../../images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <!-- partial:../../partials/_navbar.html -->
        <%- include("../parts/navbar") -%>
            <!-- partial -->
            <div class="container-fluid page-body-wrapper">

                <!-- partial:../../partials/_sidebar.html -->
                <%- include("../parts/sidebar") -%>
                    <!-- partial -->

                    <div class="main-panel">
                        <div class="content-wrapper">
                            <div class="page-header">
                                <h3 class="page-title">
                                    <%=pageTitle%>
                                </h3>
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item">
                                            <div id="contact">
                                                <a href="#" data-toggle="modal"
                                                data-target="#filter-modal" aria-hidden="true">
                                                    <i class="fa fa-filter fa-2x to-link" title="Filtre" ></i> Filtrer le Tableau 
                                                </a>
                                                <% if(studentList.length> 0){ %>
                                                    &nbsp;&nbsp;
                                                    <a title="Impression" target="_blank"
                                                        href="/print-tableau-honneur?ClassRoom=<%=roomSelected%>&AneAca=<%=yearSelected%>"><i
                                                            class="fa fa-print fa-2x"></i> Imprimer le tableau</a>
                                                    <% } %>
                                            </div>

                                        </li>
                                    </ol>

                                </nav>
                            </div>
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title h-red">
                                        <% if(locals.msg){ %>
                                            <%=msg %>
                                                <% } %>
                                    </h4>
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="table-responsive table-striped">
                                                
                                                <table id="order-listing" class="table">
                                                    <thead>
                                                        <tr>
                                                            <th>Elèves/Etudiants</th>
                                                            <%if(displayClassroom){%>
                                                            <th>Classe</th>
                                                            <%}%>
                                                            <th>Moyenne</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% studentList.forEach((Student)=> { %>
                                                            <tr>
                                                                <td>
                                                                    <strong>
                                                                        <a
                                                                        href="/student-details?ID=<%=Student.id_personne%>">
                                                                        <%=Student.fullname+" ("+Student.dossier+")"%>
                                                                    </a>
                                                                    </strong>
                                                                </td>
                                                                <%if(displayClassroom){%>
                                                                    <td class="td-classroom">
                                                                        <%=Student.classe%>
                                                                    </td>
                                                                <%}%>
                                                                <td>
                                                                    <%=Student.Moyenne%>
                                                                </td>
                                                               
                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- content-wrapper ends -->
                        <!-- partial:../../partials/_footer.html -->
                        <%- include("../parts/footer") -%>
                            <!-- partial -->
                    </div>
                    <!-- main-panel ends -->
                     <!-- FILTER -->
                     <div id="filter-modal" class="modal fade" role="dialog" data-backdrop="static">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <strong id="modalFilterTitle">Filtre</strong>
                                    <a class="close" data-dismiss="modal">×</a>
                                </div>
                                <form id="FilterForm" role="form" method="GET">
                                    <div class="modal-body">
                                        <select class="form-control w-50" name="Mention" id="Mention">
                                            <option value="Honneur">Tableau d'honneur</option>
                                            <option value="Honorable">Tableau de la mention Honorable</option>
                                        </select>
                                        <label for="Niveau">Salle de classe </label>
                                        <div class="form-inline">
                                            <select class="form-control w-35" name="ClassRoom" id="ClassRoom" onchange="populateCoursesList()">
                                               <option value="All">Toutes les salles</option>
                                                <% data.forEach((classroom)=> { %>
                                                    <option <% if(roomSelected==classroom.id){ %> selected <% } %>
                                                            value="<%=classroom.id%>">
                                                                <%=classroom.classe%>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                            &nbsp;
                                            <select class="form-control" name="AneAca" id="AneAca" onchange="populateCoursesList()">
                                                <% aneacaList.forEach((year)=> { %>
                                                    <option <% if(yearSelected==year.aneaca){ %>
                                                        selected <% } %>
                                                            value="<%=year.aneaca%>">
                                                                <%=year.aneaca%>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                            &nbsp;
                                            <select class="form-control w-25" name="Period" id="Period">
                                                <% periodList.forEach((periode)=> { %>
                                                    <option value="<%=periode.periode%>">
                                                        <%=periode.periode%>
                                                    </option>
                                                    <% }) %>
                                            </select>

                                        </div>

                                    </div>
                                    <div class="modal-footer">
                                        <input type="submit" value="Continuer" class="btn btn-success">
                                        <input type="hidden" name="modEvaluation" id="modEvaluation" value="<%=methodEvaluationCode%>">
                                        <input type="hidden" name="actionField" value="Filter" id="actionField">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                   
            </div>
            <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../vendors/js/vendor.bundle.base.js"></script>
    <script src="../../vendors/js/vendor.bundle.addons.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="../../js/off-canvas.js"></script>
    <script src="../../js/hoverable-collapse.js"></script>
    <script src="../../js/misc.js"></script>
    <script src="../../js/settings.js"></script>
    <script src="../../js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="../../js/data-table.js"></script>
    <!-- End custom js for this page-->
    <script>
       //POPULATE PERIOD IN SELECT LIST
       function populateCoursesList() {
            let classRoomId = $("#ClassRoom option:selected").val();
            let academicYear = $("#AneAca option:selected").val();
            //alert(academicYear);
            let select = $("#Period");
            select.empty();
            $.post("/getPeriod-list", {classRoomId,academicYear:academicYear }, function (data) {
                console.log(data);
                let pos = 0;
                for (i = 0; i < data.length; i++) {
                    select.append('<option value="' + data[i].periode + '">' + data[i].periode + '</option>');
                    $("#modEvaluation").val(data[0].mode_evaluation_code);
                }
            });
        }
        //SAVE NOTES TO DB
        //EDIT INFO ABOUT CLASSROOM
        function addClassroom() {
            $("#modalTitle").html("Nouvel Etudiant/Elève");
            $("#Statut").attr("disabled", true);
            $("#Niveau").val(0);
            $("#classroomName").val("");
            $("#abrevClassroomName").val("");
            $("#classroomID").val("");
            $("#actionField").val("Add");
            $("#btnClassroom").val("Enregistrer");
            $("#btnClassroom").removeClass();
            $("#btnClassroom").addClass("btn btn-success");
            $("#classroom-modal").modal();
        }
        //EDIT INFO ABOUT CLASSROOM
        function edit(StudentID, firstname, lastname, gender, fullname, AffectationID, Statut) {
            $("#Statut").attr("disabled", false);
            $("#Statut").val(Statut);
            $("#modalTitle").html("Modification " + fullname);
            $("#Firstname").val(firstname);
            $("#Lastname").val(lastname);
            $("#Sexe").val(gender);
            $("#StudentID").val(StudentID);
            $("#AffectationID").val(AffectationID);
            $("#actionField").val("Edit");
            $("#btnClassroom").val("Modifier");
            $("#btnClassroom").removeClass();
            $("#btnClassroom").addClass("btn btn-success");
            $("#classroom-modal").modal();
        }
        //DELETE INFO ABOUT CLASSROOM
        function deleted(StudentID, firstname, lastname, gender, fullname, AffectationID) {
            $("#modalTitle").html("Voulez-vous supprimer " + fullname + " de cette classe?");
            $("#Statut").attr("disabled", true);
            $("#Firstname").val(firstname);
            $("#Lastname").val(lastname);
            $("#Sexe").val(gender);
            $("#StudentID").val(StudentID);
            $("#AffectationID").val(AffectationID);
            $("#actionField").val("Edit");
            $("#btnClassroom").val("Modifier");
            $("#btnClassroom").removeClass();
            $("#actionField").val("Delete");
            $("#btnClassroom").val("Supprimer");
            $("#btnClassroom").removeClass();
            $("#btnClassroom").addClass("btn btn-danger");
            $("#classroom-modal").modal();
        }
        
        //ARRAY OF SELECTED STUDENT
        let studentSelected=[];
        //SELECT STUDENT
        function  selectStudent(check,val){
            if(check.checked){
                studentSelected.push(val);
                $("#selectCount").show();
            }else{
                if(studentSelected.includes(val)){
                    studentSelected.pop(val);
                }
            }
            let count = studentSelected.length;
            if(count==0){
                $("#selectCount").hide();
            }else{
                $("#selectCount").show();
            }
            $("#selectCount").html("Sélection : "+count);
            $("#StudentsSelected").val(studentSelected.join());

        }
        //LAUNCH MODAL AFFECTATION
        function launchModalAffectation() {
            let nbClassRoom = $("#ClassRoomID option").length;
            if(nbClassRoom>0){
                $("#changeAffectation").show();
            }else{
                $("#changeAffectation").hide();
            }
            $("#affectation-modal").modal();
        }
        //SAVE AFFECTATION CHANGE TO DB
        function changeAffectation() {
            let formData = $("#AffectationForm").serialize();
            
                $.post("/save-affectation-change-db",formData, function (data) {
                // if (data.success) { //Success 
                //     $("#notifySignature").html(data.msg);
                // } else {
                //     $("#notifySignature").html(data.msg);
                // }
            });
        }
        
    </script>
</body>


