<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>
        <%=appName%>| <%=pageTitle%>
    </title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../vendors/iconfonts/font-awesome/css/all.min.css">
    <link rel="stylesheet" href="../../vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../../vendors/css/vendor.bundle.addons.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="../../css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="../../images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <!-- partial:../../partials/_navbar.html -->
        <%- include("../parts/navbar") -%>
            <!-- partial -->
            <div class="container-fluid page-body-wrapper">

                <!-- partial:../../partials/_sidebar.html -->
                <%- include("../parts/sidebar") -%>
                    <!-- partial -->

                    <div class="main-panel">
                        <div class="content-wrapper">
                            <div class="page-header">
                                <h3 class="page-title">
                                    <%=pageTitle%>
                                </h3>
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item">
                                            <div id="contact">
                                                <% if(UserData.userAccess.includes('add_student') || UserData.userAccess.includes('All')){ %>
                                                    <button type="button" class="btn btn-info btn"
                                                        onclick="addClassroom()">Inscription</button>
                                                <% } %>

                                                
                                                    <a href="#" title="Filtrer la liste" data-toggle="modal"
                                                        data-target="#filter-modal" aria-hidden="true">
                                                        <i class="fa fa-filter fa-2x to-link"></i>
                                                        Filtrer la liste
                                                    </a>

                                                <% if(studentList.length> 0){ %>
                                                    &nbsp;&nbsp;
                                                    <% if(UserData.userAccess.includes('print_student_list') || UserData.userAccess.includes('All')){ %>
                                                    <a title="Liste des élèves" target="_blank"
                                                        href="/print-inscrit-list?ClassRoom=<%=roomSelected%>&AneAca=<%=yearSelected%>&statut=<%=statutSelected%>"><i
                                                            class="fa fa-print fa-2x"></i> Imprimer la liste</a>
                                                    <% } %>
                                                <% } %>
                                            </div>

                                        </li>
                                    </ol>

                                </nav>
                            </div>
                            <div class="card">
                                <div class="card-body">
                                <% if(locals.msg){ %>
                                    <h4 class="<%=classStyle%>">
                                        <%=msg%>
                                    </h4>
                                    <% } %>
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="table-responsive table-striped">

                                                <table id="order-listing" class="table">
                                                    <thead>
                                                        <tr>
                                                            <% if(UserData.userAccess.includes('approve_registration') || UserData.userAccess.includes('All')){ %>
                                                                <th>
                                                                    <button id="selectCount" style="display: none;"
                                                                        onclick="launchModalAffectation()"
                                                                        class="btn btn-success">Approuver</button>
                                                                </th>
                                                            <% } %>
                                                            <th>Elèves/Etudiants</th>
                                                            <th>Sexe</th>
                                                            <th>Classe</th>
                                                            <th>Statut</th>
                                                            <th>Actions</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% studentList.forEach((Student)=> { 
                                                            let registrationSatus="";
                                                            if(Student.approuve==-1){
                                                                registrationSatus = "Rejetée";
                                                            }else if(Student.approuve==1){
                                                                registrationSatus = "Approuvée";
                                                            }else{
                                                                registrationSatus = "En attente";
                                                            }
                                                        %>
                                                            <tr>
                                                                <% if(UserData.userAccess.includes('approve_registration') || UserData.userAccess.includes('All')){ %>
                                                                    <td style="width: 10px;">
                                                                        <input id="Choices"
                                                                            class="checkbox" type="checkbox"
                                                                            onchange="selectStudent(this,'<%=Student.pers_id%>','<%=Student.niveau%>')">
                                                                    </td>
                                                                <% } %>
                                                                <td>
                                                                    <% if(UserData.userAccess.includes('edit_registration') || UserData.userAccess.includes('All')){ %>
                                                                        <strong>
                                                                            <a
                                                                                href="/student-details?ID=<%=Student.pers_id%>&registered">
                                                                                <%=Student.fullname+" ("+Student.dossier+")"%>
                                                                            </a>
                                                                        </strong>
                                                                    <% }else{ %>
                                                                        <%=Student.fullname+" ("+Student.dossier+")"%>
                                                                    <% } %>
                                                                </td>
                                                                <td>
                                                                    <%=Student.sexe%>
                                                                </td>
                                                                <td>
                                                                    <%=Student.classe%>
                                                                </td>
                                                                
                                                                <td>
                                                                    <%=registrationSatus%>
                                                                </td>
                                                                <td>
                                                                <%if(Student.approuve!=1){%>
                                                                    <% if(UserData.userAccess.includes('edit_registration') || UserData.userAccess.includes('All')){ %>
                                                                        <i class="fas fa-edit to-link"
                                                                            title="Modifier l'inscription de <%=Student.fullname%>"
                                                                            onclick="edit('<%=Student.pers_id%>','<%=Student.prenom%>','<%=Student.nom%>','<%=Student.sexe%>','<%=Student.fullname%>','<%=Student.id_affectation%>','<%=Student.niveau%>','<%=Student.active%>')"> Modifier</i>
                                                                    <% } %>
                                                                    <% if(UserData.userAccess.includes('delete_registration') || UserData.userAccess.includes('All')){ %>
                                                                        &nbsp;&nbsp;&nbsp;
                                                                        <i class="fas fa-trash to-link h-red"
                                                                            title="Supprimer l'inscription de <%=Student.fullname%>"
                                                                            onclick="deleted('<%=Student.pers_id%>','<%=Student.prenom%>','<%=Student.nom%>','<%=Student.sexe%>','<%=Student.fullname%>','<%=Student.niveau%>','<%=Student.id_affectation%>')"> Supprimer</i>
                                                                    <% } %>
                                                                <% } %>
                                                                </td>

                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- content-wrapper ends -->
                        <!-- partial:../../partials/_footer.html -->
                        <%- include("../parts/footer") -%>
                            <!-- partial -->
                    </div>
                    <!-- main-panel ends -->

                    <!-- ADD STUDENT -->
                    <div id="classroom-modal" class="modal fade" role="dialog" data-backdrop="static">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <strong id="modalTitle">Nouvelle Inscription</strong>
                                    <a class="close" data-dismiss="modal">×</a>
                                </div>
                                <form id="classroomForm" name="contact" role="form" method="POST">
                                    <div class="modal-body">
                                        <label for="ClassRoom">Niveau</label><br>
                                        <div class="form-inline">
                                            <select class="form-control w-50" name="ClassRoom" required id="ClassRoom">
                                                <% data.forEach((classroom)=> { %>
                                                    <option <% if(roomSelected==classroom.id){ %> selected <% } %>
                                                            value="<%=classroom.id%>">
                                                                <%=classroom.classe%>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                            &nbsp; &nbsp;
                                            <input type="text" required name="AneAca" id="AneAca"
                                                value="<%=yearSelected%>" title="Année Académique" onclick="select()"
                                                class="form-control w-25" placeholder="Année Académique">
                                            <input type="hidden" name="Niveau" id="Niveau">
                                            <br>
                                        </div>
                                        <br>
                                        <div class="form-group">
                                            <label for="Firstname">Prénom</label>
                                            <input type="text" required name="Firstname" id="Firstname"
                                                class="form-control" placeholder="Prénom de l'étudiant/élève">
                                        </div>
                                        <div class="form-group">
                                            <label for="Lastname">Nom</label>
                                            <input type="text" required name="Lastname" id="Lastname"
                                                class="form-control" placeholder="Nom de l'étudiant/élève">
                                        </div>
                                        <div class="form-inline">
                                            <label for="Sexe">Sexe</label>
                                            &nbsp; &nbsp;
                                            <select class="form-control" name="Sexe" required id="Sexe">
                                                <option value="F">Féminin</option>
                                                <option value="M">Masculin</option>
                                            </select>
                                            &nbsp; &nbsp;
                                            <label for="Statut">Statut</label>
                                            &nbsp; &nbsp;
                                            <select class="form-control" name="Statut" id="Statut">
                                                <option value="0">En attente</option>
                                                <option value="1">Approuvée
                                                <option value="-1">Rejetée</option>
                                                </option>
                                            </select>
                                        </div>

                                    </div>
                                    <div class="modal-footer">
                                        <input type="submit" id='btnClassroom' value="Enregistrer"
                                            class="btn btn-success" id="submit">
                                        <input type="hidden" name="actionField" id="actionField">
                                        <input type="hidden" name="StudentID" id="StudentID">
                                        <input type="hidden" name="InscriptionID" id="AffectationID">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- FILTER -->
                    <div id="filter-modal" class="modal fade" role="dialog" data-backdrop="static">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <strong id="modalFilterTitle">Filtre</strong>
                                    <a class="close" data-dismiss="modal">×</a>
                                </div>
                                <form id="FilterForm" role="form" method="POST">
                                    <div class="modal-body">
                                        <label for="Niveau">Niveau </label>
                                        <div class="form-inline">
                                            <select class="form-control w-40" name="ClassRoom">
                                                <option value="All">Tous les niveaux</option>
                                                <% data.forEach((classroom)=> { %>
                                                    <option <% if(roomSelected==classroom.id){ %> selected <% } %>
                                                            value="<%=classroom.id%>">
                                                                <%=classroom.classe%>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                            &nbsp;&nbsp;
                                            <select class="form-control" name="AneAca">
                                                <% aneacaList.forEach((year)=> { %>
                                                    <option <% if(yearSelected==year.aneaca){ %> selected <% } %>
                                                            value="<%=year.aneaca%>">
                                                                <%=year.aneaca%>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                            &nbsp; &nbsp;
                                            <select class="form-control" name="Statut" title="Statut de l'inscription">
                                                <option value="All">Tous les statuts</option>
                                                <option value="1" <% if(statutSelected==1){ %> selected <% } %> >Approuvée
                                                </option>
                                                <option value="0" <% if(statutSelected==0){ %> selected <% } %>
                                                        >En attente</option>
                                                <option value="-1" <% if(statutSelected==-1){ %> selected <% } %>
                                                        >Rejetée</option>
                                            </select>

                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <input type="submit" value="Continuer" class="btn btn-success">
                                        <input type="hidden" name="actionField" value="Filter" id="actionField">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- ACCEPTER | REEJTER  -->
                    <div id="affectation-modal" class="modal fade" role="dialog" data-backdrop="static">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <strong>Changement de statut</strong>
                                    <a class="close" data-dismiss="modal">×</a>
                                </div>
                                <form id="AffectationForm" role="form">
                                    <div class="modal-body">
                                        <div class="form-inline">
                                            <strong id="modalSetRegistrationStatusTitle"></strong>&nbsp;
                                            <select class="form-control w-25" name="Statut" title="Statut de l'inscription">
                                                <option value="1" >Approuvée</option>
                                                <option value="0" >Mettre en attente</option>
                                                <option value="-1" >Rejetée</option>
                                            </select>&nbsp;
                                            l'inscription.
                                        </div>
                                    </div>
                                </form>
                                <div class="modal-footer">
                                    <button class="btn btn-success" id="changeAffectation"
                                        onclick="changeStatutInscription()">Enregistrer</button>

                                </div>

                            </div>
                        </div>
                    </div>

            </div>
            <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../vendors/js/vendor.bundle.base.js"></script>
    <script src="../../vendors/js/vendor.bundle.addons.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="../../js/off-canvas.js"></script>
    <script src="../../js/hoverable-collapse.js"></script>
    <script src="../../js/misc.js"></script>
    <script src="../../js/settings.js"></script>
    <script src="../../js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="../../js/data-table.js"></script>
    <!-- End custom js for this page-->
    <script>
        //EDIT INFO ABOUT CLASSROOM
        function addClassroom() {
            $("#classroomForm").trigger('reset');
            $("#modalTitle").html("Nouvel Etudiant/Elève");
            $("#Statut").attr("disabled", true);
            $("#Niveau").val(0);
            $("#classroomName").val("");
            $("#abrevClassroomName").val("");
            $("#classroomID").val("");
            $("#actionField").val("Add");
            $("#btnClassroom").val("Enregistrer");
            $("#btnClassroom").removeClass();
            $("#btnClassroom").addClass("btn btn-success");
            $("#classroom-modal").modal();
        }
        //EDIT INFO ABOUT CLASSROOM
        function edit(StudentID, firstname, lastname, gender, fullname, AffectationID,niveau,Statut) {
            $("#Statut").attr("disabled", false);
            $("#Statut").val(Statut);
            $("#modalTitle").html("Modification du statut de l'inscription : " + fullname);
            $("#Firstname").val(firstname).attr("disabled", true);
            $("#Lastname").val(lastname).attr("disabled", true);
            $("#Sexe").val(gender).attr("disabled", true);
            $("#StudentID").val(StudentID);
            $("#AffectationID").val(AffectationID);
            $("#ClassRoom").val(niveau);
            $("#actionField").val("Edit");
            $("#btnClassroom").val("Modifier");
            $("#btnClassroom").removeClass();
            $("#btnClassroom").addClass("btn btn-success");
            $("#classroom-modal").modal();
        }
        //DELETE INFO ABOUT CLASSROOM
        function deleted(StudentID, firstname, lastname, gender, fullname, classroom, AffectationID) {
            $("#modalTitle").html("Voulez-vous supprimer l'inscription de : " + fullname);
            $("#Statut").attr("disabled", true);
            $("#Firstname").val(firstname);
            $("#Lastname").val(lastname);
            $("#Sexe").val(gender);
            $("#StudentID").val(StudentID);
            $("#ClassRoom").val(classroom);
            $("#AffectationID").val(AffectationID);
            $("#actionField").val("Delete");
            $("#btnClassroom").val("Supprimer");
            $("#btnClassroom").removeClass();
            $("#btnClassroom").addClass("btn btn-danger");
            $("#classroom-modal").modal();
        }
        //ARRAY OF SELECTED STUDENT
        let studentSelected = [];
        let studentSelectedNiveau = [];
        //SELECT STUDENT
        function selectStudent(check,val,niveau) {
            if (check.checked) {
                studentSelected.push(val);
                studentSelectedNiveau.push(niveau);
                $("#selectCount").show();
            } else {
                if (studentSelected.includes(val)) {
                    studentSelectedNiveau.pop(niveau);
                    studentSelected.pop(val);
                }
            }
            let count = studentSelected.length;
            if (count == 0) {
                $("#selectCount").hide();
                studentSelected = [];
                studentSelectedNiveau = [];
            } else {
                $("#selectCount").show();
            }
            let StudentInfo=[];
            for(i=0;i<count;i++){
                StudentInfo.push({StudentID: studentSelected[i],StudentNiveau: studentSelectedNiveau[i]});
            }
            $("#modalSetRegistrationStatusTitle").html("Pour les " + count+" élèves sélectionnés");
            $("#selectCount").html("Changer Statut");
            $("#StudentsSelected").val(studentSelected.join());
            console.log(StudentInfo);
        }
        //LAUNCH MODAL CHANGER STATUT INSCRIPTION
        function launchModalAffectation() {
            // let nbClassRoom = $("#ClassRoomID option").length;
            // if (nbClassRoom > 0) {
            //     $("#changeAffectation").show();
            // } else {
            //     $("#changeAffectation").hide();
            // }
            $("#affectation-modal").modal();
        }
        //SAVE AFFECTATION CHANGE TO DB
        function changeStatutInscription() {
            let formData = $("#AffectationForm").serialize();
            $.post("/change-registration-status", formData, function (data) {
                // if (data.success) { //Success 
                //     $("#notifySignature").html(data.msg);
                // } else {
                //     $("#notifySignature").html(data.msg);
                // }
            });
        }

    </script>
</body>


